{% extends 'base.html.twig' %}

{% block title %}Série dans la catégorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>Série dans la catégorie {{ category.name }}:</h1>
    <br>
    {% for program in programs %}
        <div>
            <a href="{{ path("program_show", { id: program.id }) }}"><h2>{{ program.id }} / {{ program.title }}</h2></a>
            <p>{{ program.summary }}</p>
        </div>
        
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}